{
    "compilerOptions": {
        "allowJs": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "jsx": "react",
        "target": "es6",
        "esModuleInterop": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es5",
            "es6",
            "es7",
            "es2017.object"
        ],
        "baseUrl": "./src",
        "paths": {
            "utils/*": [
                "utils/*"
            ]
        },
        "skipLibCheck": true,
        "removeComments": true
    },
    "include": [
        "./src/**/*", "webpack.config.js"
    ],
    "files": [
        "./src/typings.d.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}